<h1 class="text-center text-primary m-3 mb-3">Log in</h1>

<div class="container">
    <div class="row justify-content-center text-light">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "bg-primary p-5 rounded", local: true) do |f| %>
                <div class="from-group row pt-3 pb-3 ">
                    <%= f.label :email, class: "col-2 col-form-label"%>
                    <div class="col-10">
                        <%= f.email_field :email,  class: "form-control", placeholder: "Enter your email" %>
                    </div>
                </div>
                <div class="from-group row">
                    <%= f.label :password, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password"%>
                    </div>
                </div>
                <div class="from-group row mt-3 justify-content-center">
                    <%= f.submit "Log in", class: "col-3 btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="text-primary text-center mt-3"><%= link_to "Return to article listing", articles_path %></div>
    </div>

</div>