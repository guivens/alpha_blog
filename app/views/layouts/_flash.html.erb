<div class="container">
    <% flash.each do |name, msg| %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismis="alert" aria-label="close"></button>
        </div>
    <% end %>
</div>

