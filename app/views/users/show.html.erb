<h1 class="text-center text-primary m-3 mb-3"><%= @user.username %>'s profile</h1>

<div class=""><%= gravatar_for @user, size: 150 %></div>

<% if logged_in? && @user == current_user %>
    <div class="text-center">
        <%= link_to "Edit profile", edit_user_path, class: "btn btn-outline-primary btn-lg m-4" %>
    </div>
<% end %>

<h1 class="text-center text-primary m-3 mb-3">Articles</h1>

<%= render 'articles/listing' %>

<div class="apple_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
