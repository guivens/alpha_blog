<h1 class="text-center text-primary m-3 mb-3">Bloggers</h1>

<div class="container">
    <% @users.each do |user| %>
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="card mt-4">
                    <div class="card-header bg-primary d-flex justify-content-between"> 
                        <div class="h5"><%= link_to user.username, user, class: "text-light"%></div>
                        <div class="text-muted">
                            <small> joined <%= time_ago_in_words(user.created_at)%> ago </small>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= link_to gravatar_for(user, size: 100), user %>
                        </h5>
                        <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                        <%= link_to "Show profile", user, class: "btn btn-outline-primary" %>
                        <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-success" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    <div class="text-center">
        <%= link_to "Create new article", new_article_path, class: "btn btn-outline-primary btn-lg m-4" %>
    </div>
</div>